{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["server.ts", "lib/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules"]
}
